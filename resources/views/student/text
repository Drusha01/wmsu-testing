<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // JavaScript code to load content when a test link is clicked
    const testLinks = document.querySelectorAll('.test-link');
    const testContent = document.getElementById('testContent');

    testLinks.forEach((link) => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            const testRoute = link.getAttribute('data-test-route');
            loadTestContent(testRoute);
        });
    });

    function loadTestContent(testRoute) {
        // You can make an AJAX request here to fetch the content of the selected test
        // For demonstration purposes, we'll simply show a placeholder message
        testContent.innerHTML = `<h3>Loading ${testRoute} content...</h3>`;
    }
</script>

